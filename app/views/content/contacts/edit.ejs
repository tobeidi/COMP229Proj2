<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= contact._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact Name"
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Phone</label>
                    <input type="text" class="form-control"
                    id="phoneTextField"
                    placeholder="Enter the Phone Number"
                    name="phone" 
                    value="<%= contact.phone %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Contact email"
                    name="email" 
                    value="<%= contact.email %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="cityTextArea">City</label>
                    <input type="text" class="form-control"
                    id="cityTextArea"
                    placeholder="Enter the Contact City"
                    name="city"                     
                    value="<%= contact.city %>"
                    required>
                    </input>
                </div>

                <div class="form-group">
                    <label for="ageTextField">Age [Years]</label>
                    <input type="number" class="form-control"
                    id="ageTextField"
                    placeholder="Enter the Contact Age"
                    name="runtime" 
                    value="<%= contact.age %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit </button>
                
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel </a>

                    <!-- Show delete button only in Edit not in Add -->
                    <% if (title == 'Edit Contact') {  %>
                        <a href="/contact-delete/<%= contact._id %>"
                            class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete </a> : ''; 
                    <% } %>
            </form>
        </div>

    </div>
</div>